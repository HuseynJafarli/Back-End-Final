 *@
</head>


<body>

    <!-- Preloader -->
    @* <div class="page-preloader preloader-wrapp">
        <img src="~/dark/assets/images/logo.png" alt="">
        <div class="preloader"></div>
    </div> *@
    <!-- /Preloader -->
    <!-- Navbar -->
    <nav class="navbar-youplay navbar navbar-default navbar-fixed-top ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="off-canvas" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <img src="~/dark/assets/images/logo.png" alt="">
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a asp-controller="Store" asp-action="Index">
                            Store 
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown dropdown-hover">
                        <a href="#!" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            @if (Context.Request.Cookies["AuthToken"] != null)
                            {
                                var token = Context.Request.Cookies["AuthToken"];
                                var handler = new System.IdentityModel.Tokens.Jwt.JwtSecurityTokenHandler();
                                var jwtToken = handler.ReadJwtToken(token);
                                var fullNameClaim = jwtToken.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Name)?.Value;

                                if (string.IsNullOrEmpty(fullNameClaim))
                                {
                                    fullNameClaim = "Guest"; 
                                }

                                <span>@fullNameClaim</span> <span class="badge bg-default">2</span> <span class="caret"></span> <span class="label">it is you</span>
                            }
                            else
                            {
                                <span>Guest</span> <span class="badge bg-default">0</span> <span class="caret"></span> <span class="label">you are not logged in</span>
                            }
                        </a>
                        <div class="dropdown-menu">
                            <ul role="menu">
                                @if (Context.Request.Cookies["AuthToken"] != null)
                                {
                                    <li>
                                        <a asp-controller="Home" asp-action="Profile">Profile</a>
                                    </li>
                                    <li>
                                        <a href="cart.html">My Cart <span class="badge pull-right bg-default">3</span></a>
                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <form asp-controller="Auth" asp-action="Logout" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-danger" style="padding:0; color:white;">Log Out</button>
                                        </form>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a asp-controller="Auth" asp-action="Login">Login</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Auth" asp-action="Register">Register</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </li>
                    <li>
                        <a class="search-toggle" href="search.html">
                            <i class="fa fa-search"></i>
                        </a>
                    </li>
                    <li class="dropdown dropdown-hover dropdown-cart">
                        <a href="#!" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            <i class="fa fa-shopping-cart"></i>
                        </a>
                        <div class="dropdown-menu" style="width: 300px;">
                            <div class="row youplay-side-news">
                                <div class="col-xs-3 col-md-4">
                                    <a href="#" class="angled-img">
                                        <div class="img">

                                            <img src="~/dark/assets/images/game-bloodborne-500x375.jpg" alt="">
                                        </div>
                                    </a>
                                </div>
                                <div class="col-xs-9 col-md-8">
                                    <a href="#" style="text-decoration: none;" class="pull-right mr-10"><i class="fa fa-times"></i></a>

                                    <h4 class="ellipsis"><a href="#">Bloodborne</a></h4>
                                    <span class="quantity">1 × <span class="amount">$50.00</span></span>
                                </div>
                            </div>

                            <div class="row youplay-side-news">
                                <div class="col-xs-3 col-md-4">
                                    <a href="#" class="angled-img">
                                        <div class="img">

                                            <img src="~/dark/assets/images/game-kingdoms-of-amalur-reckoning-500x375.jpg" alt="">
                                        </div>
                                    </a>
                                </div>
                                <div class="col-xs-9 col-md-8">
                                    <a href="#" style="text-decoration: none;" class="pull-right mr-10"><i class="fa fa-times"></i></a>

                                    <h4 class="ellipsis"><a href="#">Kingdoms of Amalur</a></h4>
                                    <span class="quantity">1 × <span class="amount">$20.00</span></span>
                                </div>
                            </div>

                            <div class="ml-20 mr-20 pull-right">
                                <strong>Subtotal:</strong>  <span class="amount">$70.00</span>
                            </div>

                            <div class="btn-group pull-right m-15">
                                <a href="#" class="btn btn-default btn-sm">View Cart</a>
                                <a href="#" class="btn btn-default btn-sm">Checkout</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- /Navbar -->

        @RenderBody()

    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>

    <!-- Hexagon Progress -->

    <!-- Bootstrap -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <!-- Jarallax -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jarallax/1.6.0/jarallax.min.js"></script>
    <!-- Smooth Scroll -->
    <script src="~/assets/bower_components/smoothscroll-for-websites/SmoothScroll.js"></script>

    <!-- Owl Carousel -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.1.1/owl.carousel.min.js"></script>

    <!-- Countdown -->
    <script src="~/assets/bower_components/jquery.countdown/dist/jquery.countdown.min.js"></script>
    <!-- Youplay -->
    <script src="~/assets/youplay/js/youplay.min.js"></script>


</body>


