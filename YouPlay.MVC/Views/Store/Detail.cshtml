@model GameGetVM

<style>

    .youplay-carousel .owl-item {
        width: 315px;
        height: 237px;
        overflow: hidden;
        position: relative;
    }

    .angled-img {
        clip-path: polygon(10% 0, 100% 0, 90% 100%, 0% 100%);
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .angled-img .img img{
        height: 315px;
        object-fit: cover;
        }


</style>
<!-- Main Content -->
<section class="content-wrap">

    <!-- Banner -->
    <div class="youplay-banner youplay-banner-parallax banner-top">
        <div class="image" style="background-image: url('@Model.GameImages[1].ImageUrl')">
        </div>

        <div class="info">
            <div>
                <div class="container">
                    <h1>@Model.Title</h1>
                    <br>
                    <a href="#!" class="btn btn-lg" title="Add to Cart">$@Model.SalePrice</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /Banner -->
    <!-- Images With Text -->
    <div class="youplay-carousel owl-carousel owl-loaded owl-drag youplay-carousel-1" data-autoplay="5000" bis_skin_checked="1">
        <div class="owl-stage-outer" bis_skin_checked="1">
            <div class="owl-stage" style="transform: translate3d(-50px, 0px, 0px); transition: 0.6s; width: 6125px; padding-left: 70px; padding-right: 70px;" bis_skin_checked="1">

                <div class="owl-item active" bis_skin_checked="1" style="width: 315px;">
                    <a class="angled-img" href="#!">
                        <div class="img" bis_skin_checked="1">
                            <iframe width="315" height="237" src="@Model.TrailerUrl" title="a" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
                        </div>
                    </a>
                </div>
                @foreach (var item in Model.GameImages)
                {
                    <div class="owl-item active" bis_skin_checked="1" style="width: 315px;">
                        <a class="angled-img" href="#!">
                            <div class="img" bis_skin_checked="1">
                                <img src="@item.ImageUrl" alt="..." />
                            </div>
                        </a>
                    </div>
                }

            </div>
        </div><div class="owl-nav" bis_skin_checked="1"><div class="owl-prev" bis_skin_checked="1"></div><div class="owl-next" bis_skin_checked="1"></div></div><div class="owl-dots disabled" bis_skin_checked="1"></div>
    </div>
