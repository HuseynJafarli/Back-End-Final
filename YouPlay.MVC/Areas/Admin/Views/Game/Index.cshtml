@model List<GameGetVM>


@{
    int no = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h4 class="card-title">game Table</h4>
                            <a asp-action="Create" class="btn btn-success">Create <i class="mdi mdi-plus-circle"></i></a>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Rating
                                        </th>
                                        <th>
                                            Genre
                                        </th>
                                        <th>
                                            Developer
                                        </th>
                                        <th>
                                            Cost Price
                                        </th>
                                        <th>
                                            Discount
                                        </th>
                                        <th>
                                            Sale Price
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (GameGetVM game in Model)
                                    {
                                        no++;
                                        <tr>
                                            <td class="py-1">
                                                @no
                                            </td>
                                            <td>
                                                <p>@game.Title</p>
                                            </td>                                           
                                            <td>
                                                <p>@game.Rating</p>
                                            </td>
                                            <td>
                                                <p>@game.Genre</p>
                                            </td>
                                            <td>
                                                <p>@game.Developer</p>
                                            </td>
                                            <td>
                                                <p>@game.CostPrice</p>
                                            </td>
                                            <td>
                                                <p>@game.Discount</p>
                                            </td>
                                            <td>
                                                <p>@game.SalePrice</p>
                                            </td>
                                            <td>
                                                <img style="width:150px; height:150px;" src="@game.GameImages[0].ImageUrl" />
                                            </td>

                                            <td>
                                                <a class="" asp-action="Update" asp-route-id="@game.Id"> <i class="mdi mdi-pencil btn btn-primary btn-info"></i></a>
                                                <a class="" asp-action="Delete" asp-route-id="@game.Id"> <i class="mdi mdi-delete btn btn-danger btn-info"></i></a>
                                                <!-- Button trigger modal -->
                                                <button type="button" class="btn-warning btn-info" data-toggle="modal" data-target="#modal-@no">
                                                    <i class="mdi mdi-more"></i>
                                                </button>

                                                <!-- Modal -->
                                                <div class="modal fade" id="modal-@no" tabindex="-1" aria-labelledby="@no-label" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="@no-label">Description</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                @game.Description
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
